<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state: Light grey background with white border -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/red_killer_text"/>
            <corners android:radius="2dp"/>
            <stroke
                android:color="#ffffff"
                android:width="2dp"/>
        </shape>
    </item>
    <!-- Default state: Transparent background with white border -->
    <item>
        <shape>
            <solid android:color="@color/red_killer"/>
            <corners android:radius="2dp"/>
            <stroke
                android:color="#ffffff"
                android:width="2dp"/>
        </shape>
    </item>
</selector>